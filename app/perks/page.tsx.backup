"use client";

import { useState, useMemo } from "react";
import { Copy, ExternalLink, BookOpen, Check, X } from "lucide-react";
import { cn } from "@/lib/utils";
import { perks, type Perk } from "@/lib/perks-data";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { toast } from "sonner";

// Helper function to get favicon URL from perk link
const getFaviconUrl = (url: string): string => {
  try {
    const urlObj = new URL(url);
    const hostname = urlObj.hostname.replace(/^www\./, ""); // Remove www. prefix
    return `https://www.google.com/s2/favicons?domain=${hostname}&sz=128`;
  } catch (error) {
    // If URL is invalid, return empty string
    return "";
  }
};

export default function PerksPage() {
  const [selectedCategory, setSelectedCategory] = useState<string | null>(null);
  const [copiedCodeId, setCopiedCodeId] = useState<string | null>(null);

  const categories = ["Crypto", "Banking", "Stocks"];

  const filteredPerks = useMemo(() => {
    if (!selectedCategory) {
      return perks;
    }
    return perks.filter((perk) => perk.category === selectedCategory);
  }, [selectedCategory]);

  const handleCopyCode = (code: string, perkId: string) => {
    navigator.clipboard.writeText(code);
    setCopiedCodeId(perkId);
    toast.success("邀请码已复制到剪贴板");
    setTimeout(() => setCopiedCodeId(null), 2000);
  };

  const handleClaimOffer = (link: string) => {
    window.open(link, "_blank", "noopener,noreferrer");
  };

  const getCategoryLabel = (cat: string) => {
    const labels: Record<string, string> = {
      Crypto: "加密货币",
      Banking: "银行服务",
      Stocks: "股票交易",
    };
    return labels[cat] || cat;
  };

  const getCategoryBadgeColor = (category: string) => {
    switch (category) {
      case "Crypto":
        return "text-yellow-600 border-yellow-300";
      case "Banking":
        return "text-blue-600 border-blue-300";
      case "Stocks":
        return "text-green-600 border-green-300";
      default:
        return "text-slate-600 border-slate-300";
    }
  };

  return (
    <div className="min-h-screen bg-white dark:bg-slate-950">
      {/* Main Container - No top padding here. We handle spacing inside sticky elements. */}
      <div className="max-w-[1600px] mx-auto flex items-start relative pt-0">
        
        {/* --- LEFT SIDEBAR --- */}
        <aside className="w-48 shrink-0 sticky top-16 pt-6 self-start h-[calc(100vh-64px)] overflow-y-auto border-r border-transparent hidden md:block scrollbar-hide">
          {/* Inner padding for buttons */}
          <div className="px-2">
          <div className="space-y-6">
            <div>
              <h3 className="px-2 text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2">
                福利分类
              </h3>
              <div className="space-y-1">
                {categories.map((category) => {
                  const isSelected = selectedCategory === category;
                  return (
                    <button
                      key={category}
                      onClick={() =>
                        setSelectedCategory(
                          isSelected ? null : category
                        )
                      }
                      className={cn(
                        "w-full text-left px-4 py-2 text-sm font-medium transition-all rounded-lg border-l-4",
                        isSelected
                          ? "border-yellow-400 bg-yellow-50 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400"
                          : "border-transparent text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-slate-100"
                      )}
                    >
                      {getCategoryLabel(category)}
                    </button>
                  );
                })}
              </div>
            </div>
          </div>
          </div>
        </aside>

        {/* --- RIGHT CONTENT --- */}
        <main className="flex-1 min-w-0 flex flex-col">
          
          {/* 1. HEADER (Smart Sticky) */}
          <div className="sticky top-16 z-20 bg-white/95 dark:bg-slate-950/95 backdrop-blur pt-6 pb-4 border-b border-slate-100 dark:border-slate-800 transition-all">
            <div className="px-8">
              <div className="flex flex-col gap-2">
                <div className="flex items-baseline gap-4">
                  <h1 className="text-2xl font-bold text-slate-900 dark:text-white">
                    社区专属福利
                  </h1>
                  <div className="flex items-center gap-3">
                    <span className="text-slate-500 dark:text-slate-400 text-sm">
                      找到 <span className="font-semibold text-slate-900 dark:text-slate-50">{filteredPerks.length}</span> 个福利
                    </span>
                    {selectedCategory && (
                      <button
                        onClick={() => setSelectedCategory(null)}
                        className="flex items-center gap-1 text-sm text-yellow-600 dark:text-yellow-500 hover:text-yellow-700 dark:hover:text-yellow-400 transition-colors"
                      >
                        <X className="w-4 h-4" />
                        清空筛选
                      </button>
                    )}
                  </div>
                </div>
                <p className="text-base text-slate-600 dark:text-slate-400">
                  专为 Wise Invest 读者精选的最佳注册优惠和手续费返佣
                </p>
              </div>
            </div>
          </div>

          {/* 2. SCROLLABLE CONTENT */}
          <div className="px-8 pb-20 pt-6">
            {/* Scrollable Content */}
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pt-6">
              {filteredPerks.map((perk) => (
                <PerkCard
                  key={perk.id}
                  perk={perk}
                  copiedCodeId={copiedCodeId}
                  onCopyCode={handleCopyCode}
                  onClaimOffer={handleClaimOffer}
                  getCategoryBadgeColor={getCategoryBadgeColor}
                />
              ))}
            </div>
          </div>

        </main>

      </div>
    </div>
  );
}

interface PerkCardProps {
  perk: Perk;
  copiedCodeId: string | null;
  onCopyCode: (code: string, perkId: string) => void;
  onClaimOffer: (link: string) => void;
  getCategoryBadgeColor: (category: string) => string;
}

function PerkCard({
  perk,
  copiedCodeId,
  onCopyCode,
  onClaimOffer,
  getCategoryBadgeColor,
}: PerkCardProps) {
  const isCopied = copiedCodeId === perk.id;
  const faviconUrl = getFaviconUrl(perk.link);
  const [imageError, setImageError] = useState(false);

  return (
    <div className="bg-bg-primary border border-border-color rounded-lg shadow-sm hover:shadow-md transition-all duration-200 h-full flex flex-col relative overflow-hidden">
      {/* Top Border Stripe - Brand Accent */}
      <div
        className="h-1 w-full"
        style={{
          backgroundColor: perk.color,
        }}
      />

      {/* Card Content */}
      <div className="p-5 flex flex-col flex-1">
        {/* Header Row 1: Platform Name + Category Badge */}
        <div className="flex items-start justify-between mb-3">
          <div className="flex items-center gap-3 flex-1 min-w-0">
            {/* Brand Icon */}
            {faviconUrl && !imageError ? (
              <div className="w-10 h-10 shrink-0 bg-white dark:bg-slate-800 rounded-full border border-slate-200 dark:border-slate-700 shadow-sm p-0.5 flex items-center justify-center">
                <img
                  src={faviconUrl}
                  alt={`${perk.platform} icon`}
                  className="w-9 h-9 rounded-full object-contain"
                  onError={() => setImageError(true)}
                  loading="lazy"
                />
              </div>
            ) : null}
            {/* Platform Name */}
            <h3 className="font-bold text-text-primary text-base leading-tight">
              {perk.platform}
            </h3>
          </div>
          <Badge
            variant="outline"
            className={`text-xs shrink-0 ${getCategoryBadgeColor(perk.category)} border-current`}
          >
            {perk.category === "Crypto"
              ? "加密货币"
              : perk.category === "Banking"
              ? "银行服务"
              : "股票交易"}
          </Badge>
        </div>

        {/* Row 2: Benefit + Description */}
        <div className="mb-4">
          <p className="text-lg font-bold text-text-primary mb-1 leading-tight">
            {perk.benefit}
          </p>
          <p className="text-xs text-text-secondary line-clamp-1">
            {perk.description}
          </p>
        </div>

        {/* Row 3: Action Area - Compact Footer (Pushed to Bottom) */}
        <div className={`mt-auto flex flex-col gap-2 ${!perk.code ? "pt-2" : ""}`}>
          {/* Code Section - Compact */}
          {perk.code && (
            <div className="bg-bg-secondary rounded-md flex justify-between items-center px-3 py-1.5">
              <span className="text-sm font-mono text-text-primary">
                {perk.code}
              </span>
              <button
                onClick={() => onCopyCode(perk.code!, perk.id)}
                className="text-text-muted hover:text-text-primary transition-colors"
                aria-label="复制邀请码"
              >
                {isCopied ? (
                  <Check className="w-4 h-4 text-green-600" />
                ) : (
                  <Copy className="w-4 h-4" />
                )}
              </button>
            </div>
          )}

          {/* Main CTA Button */}
          <Button
            onClick={() => onClaimOffer(perk.link)}
            className="w-full h-9 bg-yellow-400 dark:bg-yellow-500 text-black hover:bg-yellow-500 dark:hover:bg-yellow-600 font-semibold text-sm"
          >
            立即领取
            <ExternalLink className="h-3.5 w-3.5 ml-1.5" />
          </Button>

          {/* Tutorial Link - Tiny */}
          {perk.tutorialLink && (
            <a
              href={perk.tutorialLink}
              className="text-xs text-text-muted hover:text-text-primary transition-colors text-center"
            >
              <BookOpen className="w-3 h-3 inline mr-1" />
              查看教程
            </a>
          )}
        </div>
      </div>
    </div>
  );
}

